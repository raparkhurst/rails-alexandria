<head>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

</head>


<body>


<div class="wrapper">
  <!-- Top Navbar -->
  <nav class="navbar navbar-expand navbar-dark bg-dark">

    <!-- Brand logo -->
    <a class="navbar-brand" href="#">
      <%= image_tag("logos/logo-64x64_inverted.png", alt: "Digital Synapse Logo", width: '24', height: '24') %> Alexandria
    </a>

  </nav>
  <!-- End top navbar -->



  <!-- Page content -->
  <nav id="content">
    <!-- Main page section -->
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <% if @books.size <= 0 %>
              <h1>No Books</h1>
          <% else %>
              <h1><%= pluralize(@books.size, 'Book') %></h1>

              <!-- <table class="table table-striped"> -->
              <table class="table table-striped table-bordered table-hove table-sm" id="books-dataTable">
                <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Badges</th>
                </tr>
                </thead>
                <tbody>

                <% @books.each do |book| %>
                    <% if book.id.even? %>
                        <tr class="odd GradeX">
                    <% else %>
                        <tr class="even GradeX">
                    <% end %>
                    <td><%= book.id %></th>
                    <td><%= book.name[0..40] %></td>
                    <td><%= book.description[0..30] %></td>


                    <!-- Book badges section -->
                    <td>
                      <!-- Is book a chapter book -->
                      <% if book.chapter? %>
                        <!-- <td style="text-align: center;"><i class="fa fa-book" aria-hidden="true"></i></td> -->
                        <%= image_tag("icons/flat/book_chapter_color.svg", alt: "Chapter Book", width: '16', height: '16', title: "Is a chapter book") %>
                      <% else %>
                        <%= image_tag("icons/flat/book_nochapter_color.svg", alt: "Non-Chapter Book", width: '16', height: '16', title: "Is not a chapter book") %>
                      <% end %>


                      <!-- Has been been paid -->
                      <% if book.paid? %>
                        <!-- <td style="text-align: center;"> -->
                          <!-- <%= image_tag("icons/flat/badge_rewarded.svg", alt: "Non-Chapter Book", width: '16', height: '16', title: "Has been paid") %> -->
                          <i style="color:green;" class="fa fa-gift" title="Has been paid"></i>
                        <!-- </td> -->
                      <% else %>
                        <!-- <td style="text-align: center; filter: grayscale(100%);"> -->
                          <!-- <%= image_tag("icons/flat/badge_rewarded.svg", alt: "Non-Chapter Book", width: '16', height: '16', title: "has not been paid") %> -->
                          <i class="fa fa-gift" title="Has not been paid"></i>
                        <!-- </td> -->
                      <% end %>

                    </td>





                    </tr>
                <% end %>
                </tbody>
              </table>
          <% end %>
        </div>
      </div>

    </div>
    <!-- End Page Content -->



  </nav>










</body>

