<% book_query = @booksCompleteList if local_assigns[:book_query].nil? %>

<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= pluralize(book_query.size, 'Book') %></h3>



    <% if book_query.size > 0 %>

      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">

          <% book_query.each do |book| %>
            <td style="width:50%"><%= link_to truncate(book.name, length: 60, separator: ' '), book %></td>
            <td style="width:30%"><%= link_to truncate(book.description, length: 40, separator: ' '), book %></td>


            <!-- Book badges section -->
            <td style="width:20%">
              <!-- Is book a chapter book -->
              <% if book.chapter? %>
                <!-- <td style="text-align: center;"><i class="fa fa-book" aria-hidden="true"></i></td> -->
                <%= image_tag("icons/flat/book_chapter_color.svg", alt: "Chapter Book", width: '16', height: '16', title: "Is a chapter book") %>
              <% else %>
                <%= image_tag("icons/flat/book_nochapter_color.svg", alt: "Non-Chapter Book", width: '16', height: '16', title: "Is not a chapter book") %>
              <% end %>


              <!-- Is book part of a series -->
              <% if book.part_of_series %>
                <%= image_tag("icons/flat/book_series_color.svg", alt: "Chapter Book", width: '16', height: '16', title: "Part of a series") %>
              <% else %>
                <%= image_tag("icons/flat/book_series_color.svg", alt: "Chapter Book", width: '16', height: '16', style: "filter: grayscale(100%);", title: "Not part of a series") %>
              <% end %>


              <!-- Has been been paid -->
              <% if book.paid? %>
                <!-- <td style="text-align: center;"> -->
                <!-- <%= image_tag("icons/flat/badge_rewarded.svg", alt: "Non-Chapter Book", width: '16', height: '16', title: "Has been paid") %> -->
                <i style="color:green;" class="fa fa-gift" title="Has been paid"></i>
                <!-- </td> -->
              <% else %>
                <!-- <td style="text-align: center; filter: grayscale(100%);"> -->
                <!-- <%= image_tag("icons/flat/badge_rewarded.svg", alt: "Non-Chapter Book", width: '16', height: '16', title: "has not been paid") %> -->
                <i class="fa fa-gift" title="Has not been paid"></i>
                <!-- </td> -->
              <% end %>

            </td>

            </tr>
          <% end %>

        </table>
      </div>
      <!-- /.box-body -->
    <% end %>

  </div>
</div>