      <!--   <%= link_to "Edit", edit_book_path(@book), :style => 'color:white;', :class => "btn btn-primary" %> -->
      <!-- </div> -->
      <!--  -->
      <!-- <div class="btn btn-primary"> -->
      <!--   <%= link_to "All Books", books_path, :style => 'color:white;', :class => "btn" %> -->
      <!-- </div> -->

      <!-- end historical reference -->

    </div>
    <!-- End Page Content -->




  </nav>





</body>

