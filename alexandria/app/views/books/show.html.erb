<head>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <link href="/assets/logos/logo_16x16.ico" rel="shortcut icon" type="image/x-icon" />

</head>


<body>


<div class="wrapper">
  <!-- Top Navbar -->
  <nav class="navbar navbar-expand navbar-dark bg-dark">

    <!-- Brand logo -->
    <a class="navbar-brand" href="#">
      <%= image_tag("logos/logo-64x64_inverted.png", alt: "Digital Synapse Logo", width: '24', height: '24') %> Alexandria
    </a>

  </nav>
  <!-- End top navbar -->



  <!-- Page content -->
  <nav id="content">
    <!-- Main page section -->
    <div class="container">

      <!-- header block -->
      <div class="row">

        <!-- Header Information -->
        <div class="col-9">
          <h1>Book Information for <%= @book.name %></h1>
        </div>

        <!-- Book badges -->
        <div class="col-3">
          <!-- fill this in later when we have more information -->

        </div>
      </div>

      <!-- Book Name -->
      <div class="form-group row">
        <label for="Book Name" class="col-2 col-form-label">Book Name</label>
        <div class="col-10">
          <input class="form-control" type="text" value="<%= @book.name %>"  id="book-name" disabled>
        </div>
      </div>


      <!-- Book Description -->
      <div class="form-group row">
        <label for="Book Description" class="col-2 col-form-label">Book Description</label>
        <div class="col-10">
          <input class="form-control" type="text" value="<%= @book.description %>" id="book-description" disabled>
        </div>
      </div>


      <!-- Is book a chapter book -->
      <div class="form-group row">
        <label for="Is Book a Chapter Book" class="col-2 col-form-label">Is it a chapter book</label>
        <div class="col-10">
          <input class="form-control" type="text" value="<%= @book.chapter %>" id="book-chapter" disabled>
        </div>
      </div>


      <!-- Is book part of a series -->
      <div class="form-group row">
        <label for="Is book part of a series" class="col-2 col-form-label">Is it part of a series</label>
        <div class="col-10">
          <input class="form-control" type="text" value="<%= @book.part_of_series %>" id="book-in-series" disabled>
        </div>
      </div>


      <!-- Date they started to read the book -->
      <div class="form-group row">
        <label for="date-start-date-input" class="col-2 col-form-label">Date Started</label>
        <div class="col-10">
          <input class="form-control" type="date" value=<%= @book.date_start %> id="date-start-date-input" disabled>
        </div>
      </div>


      <!-- Date they finished reading the book -->
      <div class="form-group row">
        <label for="date-end-date-input" class="col-2 col-form-label">Date Finished</label>
        <div class="col-10">
          <input class="form-control" type="date" value=<%= @book.date_end %> id="date-end-date-input" disabled>
        </div>
      </div>


      <!-- Is book reward paid out -->
      <div class="form-group row">
        <label for="Have you received your reward" class="col-2 col-form-label">Has book been paid out</label>
        <div class="col-10">
          <input class="form-control" type="text" value=<%= @book.paid %> id="book-paid" disabled>
        </div>
      </div>



      <!-- Navigation Buttons -->

      <!-- button to go back to 'all books' -->
      <%= link_to "All Books", books_path, :class => "btn btn-outline-primary" %>

      <!-- button to edit entry -->
      <%= link_to "Edit", edit_book_path(@book), :class => "btn btn-outline-secondary" %>


      <!-- End Navigation Buttons -->






      <!-- here for historical reference -->
      <!-- original way I'd thought to make this happen -- makes the buttons larger!  -->
