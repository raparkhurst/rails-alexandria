<h1>Sign In</h1>


<%= form_tag(session_path) do %>
  <fieldset>
    <div class="form-group">
      <%= label_tag :username %>
      <%= email_field_tag :email, nil, class: "form-control", required: true, autofocus: true %>
      <span class="help-block"><i>* This field is required</i><span>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control", required: true %>
      <span class="help-block"><i>* This field is required (leave blank if you are editing and don't want to change the password)</i><span>
    </div>

    <p>
      <%= submit_tag "Sign In" %>
    </p>
  </fieldset>

<% end %>